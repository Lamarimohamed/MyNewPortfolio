{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "max-age=31536000, immutable"
      }
    },
    {
      "src": "/lovable-uploads/(.*)",
      "headers": {
        "cache-control": "max-age=86400"
      }
    },
    {
      "src": "/(.*\\.(ico|png|jpg|jpeg|gif|svg|webp|css|js))",
      "headers": {
        "cache-control": "max-age=86400"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 